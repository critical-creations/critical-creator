{
  "name": "critical-creator",
  "version": "1.0.1",
  "description": "Video Gen for Critical Creations",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "watch": "npx tailwindcss -i public/styles.css -o public/dist/styles.css --watch"
  },
  "repository": "https://github.com/SDeVuyst/critical-creator",
  "keywords": [],
  "author": "SDeVuyst",
  "license": "CC0-1.0",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "electron": "^33.2.0",
    "postcss-cli": "^11.0.0"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "electron-squirrel-startup": "^1.0.1",
    "ffmpeg": "^0.0.4",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.15"
  },
  "build": {
    "appId": "be.silasdevuyst.critical-creator",
    "productName": "CriticalCreator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "src/*",
      "src/**/*",
      "package.json",
      "public/*",
      "public/**/*",
      "assets/fonts/*"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": ["**/*"]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "asarUnpack": [
      "node_modules/ffmpeg-static/bin/${os}/${arch}/ffmpeg",
      "node_modules/ffmpeg-static/index.js",
      "node_modules/ffmpeg-static/package.json"
    ]
  }
}
